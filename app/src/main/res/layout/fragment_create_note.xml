<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".create.CreateNoteFragment">


    <EditText
        android:id="@+id/noteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:inputType="textLongMessage"
        android:background="@color/transparent"
        android:hint="@string/hint_add_note"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/item_default_margin_16dp"
        android:layout_marginStart="@dimen/item_default_margin_16dp"
        android:layout_marginEnd="@dimen/item_default_margin_16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>